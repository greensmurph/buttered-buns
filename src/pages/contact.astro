---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/layout/Header.vue';
import Footer from '../components/layout/Footer.vue';
import Hero from '../components/ui/Hero.vue';
import ContactForm from '../components/ui/ContactForm.vue';
---

<MainLayout
  title="Contact Us | Buttered Buns"
  description="Get in touch with our bakery for inquiries, orders, or feedback"
>
  <Header slot="header" client:load />

  <Hero title="Contact Us" subtitle="We'd love to hear from you" client:load />

  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Get In Touch</h2>
          <p>
            Have questions about our products, services, or want to place an order? Reach out to us
            using the contact form or the information below.
          </p>

          <div class="info-item">
            <h3>Address</h3>
            <p>123 Bakery Street<br />Flour City, FC 12345</p>
          </div>

          <div class="info-item">
            <h3>Hours</h3>
            <p>Monday - Friday: 7am - 6pm<br />Saturday: 8am - 4pm<br />Sunday: Closed</p>
          </div>

          <div class="info-item">
            <h3>Contact</h3>
            <p>Phone: (555) 123-4567<br />Email: contact@butteredbuns.com</p>
          </div>

          <div class="social-links">
            <h3>Follow Us</h3>
            <div class="social-icons">
              <a href="#" class="social-icon">FB</a>
              <a href="#" class="social-icon">IG</a>
              <a href="#" class="social-icon">TW</a>
              <a href="#" class="social-icon">YT</a>
            </div>
          </div>
        </div>

        <div class="contact-form-container">
          <h2>Send Us a Message</h2>
          <ContactForm client:load />
        </div>
      </div>
    </div>
  </section>

  <section class="map-section">
    <div class="container">
      <h2 class="section-title">Find Us</h2>
      <div class="map-placeholder">
        [Map Placeholder - In a real application, you would embed a Google Map or similar here]
      </div>
    </div>
  </section>
  <Footer slot="footer" client:visible />
</MainLayout>

<style>
  .contact-content {
    padding: var(--space-xl) 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-xl);
  }

  .contact-info h2,
  .contact-form-container h2 {
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
  }

  .contact-info p {
    margin-bottom: var(--space-lg);
    line-height: 1.6;
  }

  .info-item {
    margin-bottom: var(--space-lg);
  }

  .info-item h3 {
    color: var(--color-primary);
    margin-bottom: var(--space-xs);
    font-size: 1.2rem;
  }

  .social-links h3 {
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
    font-size: 1.2rem;
  }

  .social-icons {
    display: flex;
    gap: var(--space-sm);
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: var(--color-primary);
    color: white;
    border-radius: 50%;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
  }

  .social-icon:hover {
    background-color: var(--color-accent);
  }

  .map-section {
    padding: var(--space-xl) 0;
    background-color: var(--color-background);
  }

  .section-title {
    text-align: center;
    margin-bottom: var(--space-lg);
    font-size: 2rem;
    color: var(--color-primary);
  }

  .map-placeholder {
    background-color: var(--color-secondary);
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
    font-weight: bold;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-info {
      order: 1;
    }

    .contact-form-container {
      order: 0;
      margin-bottom: var(--space-lg);
    }
  }
</style>
